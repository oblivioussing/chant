import type { Column } from 'chant'

export default () => {
  return [
  {{#each list}}
    {
      prop: '{{columnName}}', {{#if dict }}// {{dictNote dict}} {{/if}}
      label: '{{columnComment}}',
      {{#if datepicker}}
      datepicker: '{{datepicker}}',
      {{/if}}
      {{#if dynamicPicker}}
      dynamicPicker: '{{dynamicPicker}}',
      {{/if}}
      {{#if hideInPages}}
      hideInPages: [{{#each hideInPages}}'{{this}}'{{#if @last}}{{else}},{{/if}}{{/each}}],
      {{/if}}
      {{#if inputType}}
      inputType: '{{inputType}}',
      {{/if}}
      {{#if required}}
      required: {{required}},
      {{/if}}
      {{#if search}}
      search: {{search}},
      {{/if}}
      {{#if type}}
      type: '{{type}}',
      {{/if}}
    }{{comma @last}}
  {{/each}}
  ] as Column[]
}
