<template>
  <!-- search -->
  <chant-table-search
    v-model="state"
    :dict="dict"
    @query="getList"
    @reset="getList">
  </chant-table-search>
  <!-- operate -->
  <chant-table-operate
    v-model="state"
    :options="['add', 'delete']"
    @add="lister.add"
    @delete="onBatchDelete">
  </chant-table-operate>
  <!-- table -->
  <chant-table v-model="state" :dict="dict">
    <!-- 操作 -->
    <chant-column-operate>
      <template #="{ row }">
        <!-- 编辑 -->
        <chant-button link @click="lister.edit(row)">编辑</chant-button>
        <!-- 删除 -->
        <chant-button link type="danger" @click="onDelete(row)">
          删除
        </chant-button>
      </template>
    </chant-column-operate>
  </chant-table>
  <!-- pagination -->
  <chant-pagination
    v-model="state.pages"
    :total="state.total"
    @change="getList">
  </chant-pagination>
</template>

<script setup lang="ts" name="/{{module}}/{{route}}/index">
import { reactive } from 'vue'
import { useLister } from '@/use'
import { columns, dict } from './share'

// use
const lister = useLister()
// state
const state = reactive({
  ...lister.state,
  columns: columns()
})
// created
lister.created(() => {
  // 获取列表
  getList()
})
// 获取列表
function getList() {
  lister.getData('{{module}}/list', state)
}
// 批量删除
function onBatchDelete() {
  lister.batchRemove('{{module}}/removes', state)
}
// 删除
function onDelete({ id }: any) {
  lister.remove('{{module}}/remove', state, { id })
}
</script>

